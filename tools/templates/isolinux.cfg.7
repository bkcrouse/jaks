default vesamenu.c32
#prompt 1
timeout 600

display boot.msg

menu background splash.jpg
menu title jaks RHEL Utility Disk
menu color border 0 #ffffffff #00000000
menu color sel 7 #ffffffff #ff000000
menu color title 0 #ffffffff #00000000
menu color tabmsg 0 #ffffffff #00000000
menu color unsel 0 #ffffffff #00000000
menu color hotsel 0 #ff000000 #ffffffff
menu color hotkey 7 #ffffffff #ff000000
menu color scrollbar 0 #ffffffff #00000000

label ks{ALTVER}pdx
  TEXT HELP
Kickstart from Portland NFS server
  ENDTEXT
  menu label RHEL {VER} ^PDX kickstart
  menu default
  kernel vmlinuz
  append initrd=initrd.img nompath inst.lang=en_US inst.keymap=us inst.ks=nfs:131.219.230.48:/unixshr/linux/kickstart/rhel.custom.ks inst.stage2=nfs:131.219.230.48:/unixshr/linux/kickstart/rhel_{ALTVER}/ asknetwork

label ks{ALTVER}slc
  TEXT HELP
Kickstart from SLC NFS server
  ENDTEXT
  menu label RHEL {VER} ^SLC kickstart
  kernel vmlinuz
  append initrd=initrd.img nompath inst.lang=en_US inst.keymap=us inst.ks=nfs:131.219.218.226:/unixshr/linux/kickstart/rhel.custom.ks inst.stage2=nfs:131.219.218.226:/unixshr/linux/kickstart/rhel_{ALTVER}/ asknetwork

label ks{ALTVER}local
  TEXT HELP
Kickstart without network from DVD ({DATE})
  ENDTEXT
  menu label RHEL {VER} ^DVD kickstart
  kernel vmlinuz
  append initrd=initrd.img nompath inst.lang=en_US inst.keymap=us inst.ks=hd:LABEL=RHEL-{VER}:/ks.cfg DVD=true REGISTER=false

label local
  menu label Boot from ^local drive
  localboot 0xffff

label rescue
  menu label ^Rescue installed system
  kernel vmlinuz
  append initrd=initrd.img rescue

label memtest86
  menu label ^Memory test
  kernel memtest
  append -
